{
  "name": "r4fuse",
  "version": "0.0.1",
  "description": "FUSE filesystem for Radio4000 - browse channels and sync tracks",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "r4fuse": "./bin/r4fuse.js"
  },
  "scripts": {
    "start": "node bin/r4fuse.js mount",
    "dev": "node --watch bin/r4fuse.js mount",
    "test": "node test/test.js",
    "build": "bun build bin/r4fuse.js --compile --outfile=r4fuse",
    "build-linux": "bun build bin/r4fuse.js --compile --outfile=r4fuse-linux",
    "build-windows": "bun build bin/r4fuse.js --compile --outfile=r4fuse-windows.exe",
    "build-osx": "bun build bin/r4fuse.js --compile --outfile=r4fuse-osx",
    "build-osx-arm64": "bun build bin/r4fuse.js --compile --outfile=r4fuse-macos-arm64",
    "build:all": "echo 'Use GitHub Actions workflow to build all platforms'"
  },
  "keywords": [
    "radio4000",
    "fuse",
    "filesystem",
    "music",
    "yt-dlp"
  ],
  "author": "radio4000",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@radio4000/sdk": "^0.4.11",
    "fuse-native": "^2.2.6",
    "node-id3": "^0.2.9"
  },
  "devDependencies": {
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18"
  }
}
