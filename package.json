{
  "name": "r4fuse",
  "version": "0.0.1",
  "description": "FUSE filesystem for Radio4000 - browse channels and sync tracks",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "r4fuse": "./bin/r4fuse.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "prestart": "npm run build",
    "start": "node bin/r4fuse.js mount",
    "test": "node test/test.js",
    "dev": "npm run build && node --watch bin/r4fuse.js mount"
  },
  "keywords": [
    "radio4000",
    "fuse",
    "filesystem",
    "music",
    "yt-dlp"
  ],
  "author": "radio4000",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@radio4000/sdk": "^0.4.11",
    "fuse-native": "^2.2.6",
    "get-artist-title": "^1.3.1",
    "node-id3": "^0.2.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "dotenv": "^17.2.3",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18"
  }
}
